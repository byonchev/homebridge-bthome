{
  "pluginAlias": "BTHomePlatform",
  "pluginType": "platform",
  "singular": true,
  "strictValidation": false,
  "schema": {
    "type": "object",
    "properties": {
      "devices": {
        "title": "Devices",
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "mac": {
              "title": "MAC address",
              "description": "Bluetooth MAC address of the device",
              "type": "string",
              "required": true
            },
            "encryptionKey": {
              "title": "Encryption key",
              "description": "The key used to encrypt the advertisment data (optional)",
              "type": "string",
              "required": false
            }
          }
        }
      }
    }
  }
}
